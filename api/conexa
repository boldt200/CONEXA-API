export default async function handler(req, res) {

  if (req.method !== "POST") {
    return res.status(405).json({ error: "Método não permitido. Use POST." });
  }

  try {
    const { message } = JSON.parse(req.body);

    if (!message) {
      return res.status(400).json({ error: "Mensagem ausente." });
    }

    // Chave da API vem das variáveis de ambiente do Vercel
    const apiKey = process.env.OPENAI_API_KEY;

    const response = await fetch("https://api.openai.com/v1/chat/completions", {
      method: "POST",
      headers: {
        "Authorization": `Bearer ${apiKey}`,
        "Content-Type": "application/json"
      },
      body: JSON.stringify({
        model: "gpt-4o-mini",
        messages: [
          { role: "system", content: "Você é a CONEXA, especialista em comunicação humana clara e natural." },
          { role: "user", content: message }
        ],
        max_tokens: 2000,
      })
    });

    const data = await response.json();

    const resposta = data?.choices?.[0]?.message?.content || "Não consegui gerar resposta.";

    return res.status(200).json({ resposta });

  } catch (error) {
    return res.status(500).json({
      error: "Erro interno ao processar requisição.",
      details: error.message
    });
  }
}
