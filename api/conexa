export default async function handler(req, res) {
  if (req.method !== "POST") {
    return res.status(405).json({ error: "Método não permitido" });
  }

  const { mensagem } = req.body;

  if (!mensagem) {
    return res.status(400).json({ error: "Mensagem não enviada" });
  }

  try {
    const resposta = await fetch("https://api.openai.com/v1/chat/completions", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
        Authorization: `Bearer ${process.env.OPENAI_API_KEY}`
      },
      body: JSON.stringify({
        model: "gpt-4o-mini",
        messages: [
          { role: "system", content: "Você é a CONEXA, uma IA educada, simpática e profissional." },
          { role: "user", content: mensagem }
        ],
        max_tokens: 300
      })
    });

    const data = await resposta.json();

    return res.status(200).json({
      respostas: [
        data.choices?.[0]?.message?.content || "Erro na resposta da IA",
        data.choices?.[0]?.message?.content || "Erro na resposta da IA",
        data.choices?.[0]?.message?.content || "Erro na resposta da IA"
      ]
    });
  } catch (e) {
    return res.status(500).json({ error: "Erro interno no servidor", detalhe: e.message });
  }
}
